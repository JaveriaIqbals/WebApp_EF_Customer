@page 
@model WebApp_EF_Customer.Pages.CustPages.IndexModel

<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
<ul class="navbar-nav flex-grow-1">
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-page="/CustPages/Create">Create Customer</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-page="">Show Customers</a>
    </li>
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="" asp-page="/OrderPages/Create">Create Order</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-page="/OrderPages/ShowALl">Show Orders</a>
    </li>
</ul>
</div>
<table style="width: 100%" class="table table-bordered table-striped">
    <tr>
        <th>
            Customer ID
        </th>
        <th>
            Name
        </th>
        <th>
            Contact
        </th>
        <th>
            Address
        </th>

        <th>
            UPDATE CUSTOMER DATA
        </th>
    </tr>

    @foreach(var cust in Model.Customers)
    {
    <tr>
        <td>@cust.Id</td>
        <td>@cust.Name</td>
        <td>@cust.Contact</td>
        <td>@cust.Address</td>
        <td>
            <a asp-page="Edit" asp-route-id="@cust.Id" class="btn btn-primary">Edit</a>
            <a asp-page="Delete" asp-route-id="@cust.Id" class="btn btn-danger">Delete
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                </svg>
            </a>
        </td>
    </tr>
    }
</table>